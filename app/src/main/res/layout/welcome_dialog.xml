<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:orientation="vertical"
        android:background="@drawable/search_donar_backgroud">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/d_user_name"
        android:layout_gravity="center"
        android:text="Welcome Donor"
        android:textColor="@color/colorRed"
        android:textStyle="bold"
        android:textSize="18dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thank you for taking the first step of your registration."
            android:textColor="@color/colorRed"

            android:layout_marginTop="10dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:textSize="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:text="And whoever saves one â€“ it is as if he had saved mankind entirely.  (Quran 5:32)"
            android:textColor="@color/colorRed"
            android:textStyle="bold"
            android:textSize="15dp"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/d_button_ok"
            android:layout_weight="1"
            android:text="OK"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="4dp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/corner"
            />

    </LinearLayout>

</RadioGroup>